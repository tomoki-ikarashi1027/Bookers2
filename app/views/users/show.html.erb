<h1>User info</h1>

<p>name  <%= @user.name %></p>
<p>introduction  <%= @user.introduction %></p>
<%= link_to "Edit",edit_user_path %></ul>

<h2>Books</h2>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Opinion</th>
			<th colspan="3"></th>
		</tr>
	</thead>

<tbody>
	<% @books.each do |book| %>
	<td><%= book.title %></td>
	<td><%= book.body %></td>
 <% end %>
</tbody>
</table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
	<% if@book.errors.any? %>
	<h3><%= @book.errors.count %>件のerrorが発生しました</h3>
<ul>
	<% @book.errors.full_messages.each do |message| %>
		<%= message %>
	<% end %>
	<% end %>
</ul>


<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %><br>

<%= f.submit 'Create Book'  %>

<% end %>