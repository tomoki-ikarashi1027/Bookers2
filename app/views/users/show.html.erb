<div class="container">
<div class="row">
	<div class="col-xs-3">
<%= render 'users/list',{user: @user,book: @book} %>
</div>
<div class="col-xs-9">
<h2>Books</h2>

<table class="table">
	<thead>
		<tr>
			<th>Title</th>
			<th>Opinion</th>
			<th colspan="3"></th>
		</tr>
	</thead>

<tbody>
	<% @books.each do |book| %>
   <tr>
	<td> <%= attachment_image_tag @user, :profile_image,:fill,60,60,fallback: "no_image.jpeg" %></td>
	<td><%= link_to book.title, book_path(book) %></td>
	<td><%= book.body %></td>
	<% end %>
</tr>
</tbody>
</table>
</div>
</div>
</div>

