    <h2>User info</h2>
    <%= form_for(@user) do |f| %>
<% if@user.errors.any? %>
<h2><%= @user.errors.count %>件のerrorが発生しました。</h2>
<% @user.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
<% end %>

    <label>Name</label>>
    <%= f.text_field :name %>
 <div class="user-edit-image">
   <%= f.attachment_field :profile_image, placeholder:
   "プロフィール画像" %>
</div>
    <h4>Introduction</h4>
    <%= f.text_area :introduction %><br>
    <%= f.submit 'Update User' %>
<% end %>