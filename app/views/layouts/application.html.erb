<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navlist">
  <nav>
    <span>Bookers</span>
  </nav>
  <nav>
      <% if user_signed_in? %>
       <ul class="">
        <%= link_to "Home",user_path(current_user.id) %></ul>
        <ul class="">
        <%= link_to "Users",users_path %></ul>
        <ul class="">
        <%= link_to "Books",books_path %></ul>
      <ul class="">
        <%= link_to "logout",destroy_user_session_path,method: :delete %></ul>
      
      <% else %>
      <ul class="">
        <%= link_to "Home",home_path %></ul>
        <ul class="">
        <%= link_to "About",about_path %></ul>
      <ul class="">
        <%= link_to "sign up",new_user_registration_path %>
      </ul>
      <ul class="">
        <%= link_to "login",new_user_session_path %>
      </ul>
      <% end %>
    </nav>
      
    </header><!-- /header -->
    <%= yield %>
  </body>
</html>
